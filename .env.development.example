# Server Configuration
NODE_ENV=development
LISTEN_HOST=localhost
LISTEN_PORT=8080
BASE_PATH=
LOG_LEVEL=debug
TZ=UTC

# Processing Limits
# Maximum file size (100MB)
FILE_MAX_BYTES_MB=100
# Number of concurrent tasks (recommended = number of CPU cores)
MAX_CONCURRENCY=4
# Time to wait in queue before rejection (30 sec)
QUEUE_TIMEOUT_SECONDS=30
# Total request timeout including queue wait (60 sec)
REQUEST_TIMEOUT_SECONDS=60

# Shutdown
SHUTDOWN_TIMEOUT_SECONDS=30